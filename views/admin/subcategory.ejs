<!----add-modal start--------->
<div class="modal fade" id="addsubcategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
	  <div class="modal-content">
		<div class="modal-header">
		  <h5 class="modal-title" id="exampleModalLabel">AJOUTER SOUS-CATEGORIE</h5>
		  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		  </button>
		</div>
		<div class="modal-body">
		  <form method="POST" action="/add-subcategory">
			<div class="form-group">
			  <label for="recipient-name" class="col-form-label">SOUS CATEGORIE</label>
			  <input type="text" class="form-control" name="titre">
			</div>

			<div class="form-group">
				<label htmlFor="category">CHOIX CATEGORIE</label>
				<select class="custom-select"  name="category">
				<option selected={true}>category</option>
				<% titre.forEach(function(titre) { %>
				<option><%= titre %></option>
				<% }); %>
				</select>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger" data-dismiss="modal">QUITER</button>
				<button type="submit" class="btn btn-primary">ENREGISTRER</button>
			  </div>
		  </form>
		</div>
		
	  </div>
	</div>
  </div>
<!----End add-modal --------->



<!----End add-modal start--------->
<% subcategory.forEach(subcategory => { %>
<div class="modal fade"id="edditsubcategory<%= subcategory.id %>"tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">MODIFIER SOUS-CATEGORIE</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<form method="POST" action="/eddit-subcategory/<%=subcategory.id %>">

          <div class="form-group">
            <label for="titre" class="col-form-label">TITRE SOUS CATEGORIE:</label>
            <input type="text" class="form-control" name="titre"  value="<%= subcategory.titre %>">
          </div>

          <div class="form-group">
				<label htmlFor="category">CHOIX CATEGORIE</label>
				<select class="custom-select"  name="category">
				<option selected={true}>category</option>
				<% titre.forEach(function(titre) { %>
					<option><%= titre %></option>
				<% }); %>
			</select>
		   </div>

		  <div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">FERMER</button>
			<button type="submit" class="btn btn-primary">ENREGISTRER</button>
		  </div>
		</form>
      </div>
     
    </div>
  </div>
</div>
<% }) %>

